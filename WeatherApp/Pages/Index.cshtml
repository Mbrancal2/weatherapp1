@page 
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<body>
  <div class="d-flex justify-content-center mt-5">
    <form method="post">
      <div class="input-group">
        <label class="form-label" asp-for="Search_String"> search </label>
        @if(@Model.status_code_ok == false)
        {
          <input class="form-control" asp-for="Search_String" placeholder="No City Found">
        }
        else
        {
          <input calss="form-control" asp-for="Search_String">
        }
        <input type="submit" value="Search" class="btn btn-primary btn-sm" />
      </div>
    </form>
  </div>
 
</body>
<br>
<div class="container">
  <div class="row">
    <div class="column p-2" style="flex:0 0 20%">
      @Model.City.Name
    </div>
    <div class="column p-2" style="flex: 0 0 20%">
      @Model.City.Lon
    </div>
    <div class="column p-2" style="flex:0 0 20%">
      @Model.City.Lat
    </div>
    <div class="column p-2" style="flex:0 0 20%">
      @Model.Weather.Condition
    </div>
    <div class="column p-2" style="flex:0 0 20%">
      @Model.Weather.Description
    </div>
    <div class="column p-2" style="flex:0 0 20%">
      @Model.Weather.Temp_min
    </div>
    <div class="column p-2" style="flex:0 0 20%">
      @Model.Weather.Temp_max
    </div>
    <div class="column p-2" style="flex:0 0 20%">
      @Model.Weather.Dt
    </div>
    <div class="column p-2" style="flex:0 0 20%">
      @Model.Weather.Timezone
    </div>
  </div>
</div>
